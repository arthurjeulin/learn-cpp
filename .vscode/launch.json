{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) Build and debug hello_world file",
      "type": "cppdbg",
      "request": "launch",
      "program": "/ssd/dev/learn-cpp/software-dev/gdb/hello_world",
      "args": [
      ],
      "stopAtEntry": true,
      "cwd": "${fileDirname}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Activer l'impression en mode Pretty pour gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Définir la version désassemblage sur Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ]
    }
  ]
}